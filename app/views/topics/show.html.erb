
<%= title(@topic.subject, "Topics") %>

<h2><%= @topic.subject %></h2>

<%= link_to "All Topics", topics_path(@topic) %>
<%= link_to "New Topic", new_topic_path(@topic) %>
<%= link_to "Edit Topic", edit_topic_path(@topic) %>
<%= link_to "Delete Topic", topic_path(@topic),
            method: :delete, confirm: "Are you SURE you want to delete this topic?" %>
<%= link_to "New Step", new_topic_step_path(@topic) %>

<ul id='steps'>
  <% @topic.steps.each do |step| %>
    <li>
      #<%= step.id %> -
      <%= link_to step.description, [@topic, step] %>
    </li>
  <% end %>
</ul>
